<style>

/* Base link styles */
.navbar .nav-link {
  font-size: 17px;
  padding: 4px 6px;
  color: #1b1b1b; /* Text color only */
}

/* Hover for normal links (but NOT Resources) */
.navbar .nav-link:hover:not(#navbarDropdownResources),
.navbar .dropdown-item:hover {
  text-decoration: none;
}

/* Keep "Resources" normal weight in ALL states */
#navbarDropdownResources.nav-link,
#navbarDropdownResources.nav-link:hover,
#navbarDropdownResources.nav-link:focus,
#navbarDropdownResources.nav-link:active,
#navbarDropdownResources[aria-expanded="true"],
.nav-item.dropdown.show > #navbarDropdownResources.nav-link {
  letter-spacing: normal;   /* prevent any “spreading” */
  text-decoration: none;
}

/* Remove Bootstrap dropdown caret arrow */
.navbar .dropdown-toggle::after {
  display: none !important;
  content: none !important;
}

/* ===== Dropdown panel styling ===== */
.navbar .dropdown-menu {
  border: 0;
  border-radius: 8px;
  min-width: 120px;
  box-shadow: 0 8px 16px rgba(0,0,0,0.2);
  padding: 6px 0;
}

/* Dropdown links */
.navbar .dropdown-item {
  color: #1b1b1b;
  padding: 10px 14px;
  white-space: nowrap;
}

/* Override Bootstrap's blue active state for Carapetyan Letters etc. */
.navbar .dropdown-item.active,
.navbar .dropdown-item:active {
  background-color: transparent;
  color: #1b1b1b;
  font-weight: 400;
  text-decoration: none;
}

/* Divider tone */
.navbar .dropdown-divider {
  border-top-color: rgba(106,97,86,0.25);
}

/* Focus ring for keyboard users */
.navbar .nav-link:focus,
.navbar .dropdown-item:focus {
  outline: 2px solid rgba(106,97,86,0.45);
  outline-offset: 2px;
  box-shadow: none;
}

/* Keep "Resources" identical in ALL states (color, weight, spacing) */
.navbar #navbarDropdownResources.nav-link,
.navbar #navbarDropdownResources.nav-link:hover,
.navbar #navbarDropdownResources.nav-link:focus,
.navbar #navbarDropdownResources.nav-link:active,
.navbar #navbarDropdownResources[aria-expanded="true"],
.navbar .nav-item.dropdown.show > #navbarDropdownResources.nav-link,
.navbar .nav-item.dropdown:hover > #navbarDropdownResources.nav-link {
  color: #1b1b1b !important;   /* no color change */
  font-weight: 400 !important;  /* no bolding */
  letter-spacing: normal !important; /* no "spreading" */
  text-decoration: none !important;
  -webkit-font-smoothing: antialiased; /* optional: reduce shimmer on hover */
  text-rendering: optimizeLegibility;  /* optional */
}

</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const mqHover = window.matchMedia('(hover: hover) and (pointer: fine)');
  if (!mqHover.matches) return; // only run on desktop

  document.querySelectorAll('.nav-item.dropdown').forEach(item => {
    const toggle = item.querySelector('.dropdown-toggle');
    const menu = item.querySelector('.dropdown-menu');
    if (!toggle || !menu) return;

    // Show menu on hover
    item.addEventListener('mouseenter', () => {
      toggle.classList.add('show');
      menu.classList.add('show');
      toggle.setAttribute('aria-expanded', 'true');
    });

    // Hide menu on mouse leave
    item.addEventListener('mouseleave', () => {
      toggle.classList.remove('show');
      menu.classList.remove('show');
      toggle.setAttribute('aria-expanded', 'false');
    });
  });
});
</script>

<header>
  <!-- Nav Bar -->
  <nav id="navbar" class="navbar navbar-light navbar-expand-sm {% if site.navbar_fixed %}fixed-top{% else %}sticky-top{% endif %}" role="navigation">
    <div class="container">
      {% if page.permalink != '/' %}
        <a class="navbar-brand title font-weight-lighter" href="{{ site.baseurl }}/">
          {% if site.title == 'blank' %}
            {% if site.first_name %}
              <span class="font-weight-bold">
                {{- site.first_name -}}
              </span>
            {% endif %}
            {% if site.middle_name %}
              {{- site.middle_name -}}
            {% endif %}
            {% if site.last_name %}
              {{- site.last_name -}}
            {% endif %}
          {% else %}
            {{- site.title -}}
          {% endif %}
        </a>
      {% elsif site.enable_navbar_social %}
        <!-- Social Icons -->
        <div class="navbar-brand social">{% include social.liquid %}</div>
      {% endif %}
      <!-- Navbar Toggle -->
      <button
        class="navbar-toggler collapsed ml-auto"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar top-bar"></span>
        <span class="icon-bar middle-bar"></span>
        <span class="icon-bar bottom-bar"></span>
      </button>

      <div class="collapse navbar-collapse text-right" id="navbarNav">
        <ul class="navbar-nav ml-auto flex-nowrap">
          {% for page in site.pages %}
            {% if page.permalink == '/' %} {% assign about_title = page.title %} {% endif %}
          {% endfor %}

          <!-- About -->
          <li class="nav-item {% if page.permalink == '/' %}active{% endif %}">
            <a class="nav-link" href="{{ '/' | relative_url }}">
              {{- about_title }}
              {% if page.permalink == '/' %}
                <span class="sr-only">(current)</span>
              {% endif %}
            </a>
          </li>

          <!-- Custom Resources dropdown (no parent page) -->
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="navbarDropdownResources"
              role="button"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
              resources
            </a>
            <div class="dropdown-menu dropdown-menu-start" aria-labelledby="navbarDropdownResources">
            <!-- New link for Archival Documents -->
            <a class="dropdown-item {% if page.url == '/archive/' %}active{% endif %}" href="{{ '/archive/' | relative_url }}">
              archival documents
            </a>

            <!-- Existing link for Carapetyan Letters -->
            <a class="dropdown-item {% if page.url == '/Carapetyan/' %}active{% endif %}" href="{{ '/Carapetyan/' | relative_url }}">
              Carapetyan letters
            </a>
          </div>
          </li>

          {% assign sorted_pages = site.pages | sort: 'nav_order' %}

          <!-- Other pages -->
          {% assign sorted_pages = site.pages | sort: 'nav_order' %}
          {% for p in sorted_pages %}
            {% if p.nav and p.autogen == null %}
              {% if p.dropdown %}
                {% assign has_active_child = false %}
                {% for child in p.children %}
                  {% if page.title == child.title %}
                    {% assign has_active_child = true %}
                  {% endif %}
                {% endfor %}
                <li class="nav-item dropdown {% if page.title == p.title or has_active_child %}active{% endif %}">
                  <a
                    class="nav-link dropdown-toggle"
                    href="#"
                    id="navbarDropdown"
                    role="button"
                    data-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false"
                  >
                    {{- p.title }}
                    {% if page.title == p.title or has_active_child %}
                      <span class="sr-only">(current)</span>
                    {% endif %}
                  </a>
                  <div class="dropdown-menu dropdown-menu-start" aria-labelledby="navbarDropdown">
                    {% for child in p.children %}
                      {% if child.title == 'divider' %}
                        <div class="dropdown-divider"></div>
                      {% else %}
                        <a class="dropdown-item {% if page.title == child.title %}active{% endif %}" href="{{ child.permalink | relative_url }}">
                          {{- child.title -}}
                        </a>
                      {% endif %}
                    {% endfor %}
                  </div>
                </li>
              {% else %}
                <li class="nav-item {% if page.url contains p.permalink %}active{% endif %}">
                  {% if p.permalink contains '/blog/' %}{% assign url = '/blog/' %} {% else %}{% assign url = p.url %}{% endif %}
                  <a class="nav-link" href="{{ url | relative_url }}">
                    {{- p.title }}
                    {% if page.url contains p.url %}
                      <span class="sr-only">(current)</span>
                    {% endif %}
                  </a>
                </li>
              {% endif %}
            {% endif %}
          {% endfor %}
          {% if site.enable_darkmode %}
            <!-- Toogle theme mode -->
            <li class="toggle-container">
              <button id="light-toggle" title="Change theme">
                <i class="fa-solid fa-moon"></i>
                <i class="fa-solid fa-sun"></i>
              </button>
            </li>
          {% endif %}
        </ul>
      </div>
    </div>
  </nav>
  {% if site.enable_progressbar %}
    <!-- Scrolling Progress Bar -->
    <progress id="progress" value="0">
      <div class="progress-container">
        <span class="progress-bar"></span>
      </div>
    </progress>
  {% endif %}
</header>
